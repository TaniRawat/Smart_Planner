# Example environment file for backend
# Copy this to .env and fill in your values

APP_NAME=Smart Study Planner
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database - SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite+aiosqlite:///./smart_planner.db
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/smartplanner

SYNC_DATABASE_URL=sqlite:///./smart_planner.db

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase@project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# AI APIs
OPENAI_API_KEY=sk-your-key-here
GEMINI_API_KEY=your-gemini-key-here
ANTHROPIC_API_KEY=your-claude-key-here
AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4-turbo-preview

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=.pdf,.txt,.md,.docx,.jpg,.png,.jpeg

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@smartstudyplanner.com

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Features
AI_TUTOR_ENABLED=true
GAMIFICATION_ENABLED=true
FILE_UPLOAD_ENABLED=true

# Logging
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
